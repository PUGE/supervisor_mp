/**index.wxss**/
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-content {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
}

.dialog-content text,
.dialog-content input {
  display: block;
  margin-top: 10rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}


.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 90%;
  margin: 10px auto;
}

.info view {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.scrollarea .log-btn {
  background-color: #1890ff;
  color: white;
  border: none;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  height: 70rpx;
  padding: 0;
  margin: 0;
  width: 100%;
}